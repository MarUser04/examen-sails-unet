<div class='container mt-4'>
    <ol class="breadcrumb">
      <li class="breadcrumb-item">
        <a href="/">Home</a>
      </li>
      <li class="breadcrumb-item active">Editar Actores</li>
    </ol>
    <div>
    </div>
    <div class="" style="padding: 20px">
      <div class="border-bottom mb-4">
        <h1>Editar Actore</h1>
      </div>
      <form action="/actor/update" enctype="application/x-www-form-urlencoded" method="POST" class="needs-validation" novalidate>
        <div class="form-row">
          <div class="col-md-6 mb-3">
            <label for="nombreReal">Nombre real</label>
            <input type="text" class="form-control" name="nombreReal" id="nombreReal" placeholder="nombre Real" value="<%=actorDefault['nombre_real']%>" required>
            <div class="valid-feedback">
              Looks good!
            </div>
          </div>
          <div class="col-md-6 mb-3">
            <label for="nombreCelebridad">Nombre de celebridad</label>
            <input type="text" class="form-control" id="nombreCelebridad" name="nombreCelebridad" placeholder="nombre como celebridad" value="<%=actorDefault['nombre_celebre']%>" required>
            <div class="valid-feedback">
              Looks good!
            </div>
          </div>
          <div class="col-md-6 mb-3">
              <label for="date">Fecha de nacimiento</label>
              <input type="date" class="form-control" id="date" name="date" placeholder="fecha nacimiento" value="<%=actorDefault['fecha_nacimiento']%>" required>
              <div class="valid-feedback">
                Looks good!
              </div>
          </div>
          <div class="col-md-6 mb-3">
              <label for="cantidad">Cantidad Oscares</label>
              <input type="number" class="form-control" id="cantidad" name="cantidad" placeholder="cantidad oscares" value="<%=actorDefault['cantidad_oscares']%>" required>
              <div class="valid-feedback">
                Looks good!
              </div>
          </div>
          <div class="col-md-6 mb-3">
              <label for="nominaciones">Cantidad nominaciones</label>
              <input type="number" class="form-control" id="nominaciones" name="nominaciones" placeholder="cantidad nominaciones" value="<%=actorDefault['catidad_nominaciones']%>" required>
              <div class="valid-feedback">
                Looks good!
              </div>
          </div>
          <div class="col-md-6 mb-3">
            <label for="sexo">Sexo</label>
            <select name="sexo" id="sexo" class="form-control">
              <option id="m" value="m">m</option>
              <option value="m" id="m">f</option>
            </select>
          </div>
        </div>
        </div>
        <div class="d-flex justify-content-center">
          <button class="btn btn-primary" type="submit">Update</button>
        </div>
      </form>
  
      <script>
        (function () {
          'use strict';
          window.addEventListener('load', function () {
            // Fetch all the forms we want to apply custom Bootstrap validation styles to
            var forms = document.getElementsByClassName('needs-validation');
            // Loop over them and prevent submission
            var validation = Array.prototype.filter.call(forms, function (form) {
              form.addEventListener('submit', function (event) {
                if (form.checkValidity() === false) {
                  event.preventDefault();
                  event.stopPropagation();
                }
                form.classList.add('was-validated');
              }, false);
            });
          }, false);
        })();
      </script>
    </div>
  </div>